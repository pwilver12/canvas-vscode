{
	"name": "canvas-theme",
	"version": "1.0.0",
	"displayName": "Canvas Theme",
	"description": "A VS Code theme based on HubSpot's Canvas design system (with Operator Mono support).",
	"publisher": "hatreeksbergermon",
	"license": "MIT",
	"icon": "images/logo.png",
	"scripts": {
		"start": "nodemon --exec vsce package",
		"release": "release-it && npx vsce publish",
		"release:test": "release-it --dry-run"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pwilver12/canvas-vscode"
	},
	"engines": {
		"vscode": "^1.0.0"
	},
	"galleryBanner": {
		"color": "#2d3e50",
		"theme": "dark"
	},
	"categories": [
		"Themes"
	],
	"keywords": [
		"VSCode",
		"Themes"
	],
	"contributes": {
		"themes": [
			{
				"label": "Canvas",
				"uiTheme": "vs-dark",
				"path": "./themes/canvas-theme.json"
			}
		]
	},
	"badges": [
		{
			"url": "https://img.shields.io/badge/License-MIT-brightgreen.svg",
			"href": "https://opensource.org/licenses/MIT",
			"description": "License: MIT"
		}
	],
	"devDependencies": {
		"nodemon": "^1.18.9",
		"release-it": "^10.0.7"
	}
}
